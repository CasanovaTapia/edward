<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class=row>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name' %>
    </div>
    <div class="form-group">
      <%= f.label :industry %>
      <%= f.select :industry_id, options_from_collection_for_select(Industry.all, "id", "title") %>
    </div>
    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>
    <div class="form-group">
      <%= f.text_field :location, autofocus: true, class: 'form-control', placeholder: 'City' %>
    </div>
    <div class="form-group">
      <%= f.text_field :curr_project, autofocus: true, class: 'form-control', placeholder: 'Currently working on' %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.text_field :website, autofocus: true, class: 'form-control', placeholder: 'Main website' %>
    </div>
    <div class="form-group">
      <%= f.text_field :twitter, autofocus: true, class: 'form-control', placeholder: 'Twitter' %>
    </div>
    <div class="form-group">
      <%= f.text_field :instagram, autofocus: true, class: 'form-control', placeholder: 'Instagram' %>
    </div>
    <div class="form-group">
      <%= f.text_field :facebook, autofocus: true, class: 'form-control', placeholder: 'Facebook Page' %>
    </div>
    <div class="form-group">
      <%= f.text_field :imdb, autofocus: true, class: 'form-control', placeholder: 'IMDB' %>
    </div>
    <div class="form-group">
      <%= f.text_field :portfolio, autofocus: true, class: 'form-control', placeholder: 'Portfolio Link' %>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <%= f.text_area :bio, autofocus: true, class: 'form-control', placeholder: 'Short bio and description of work' %>
    </div>
    <%= f.submit "Submit", class: 'btn' %>
  </div>
</div>
<% end %>
