<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Bio</th>
      <th>Website</th>
      <th>Curr project</th>
      <th>Industry</th>
      <th>Avatar</th>
      <th>Twitter</th>
      <th>Instagram</th>
      <th>Facebook</th>
      <th>Imdb</th>
      <th>Portfolio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.location %></td>
        <td><%= profile.bio %></td>
        <td><%= profile.website %></td>
        <td><%= profile.curr_project %></td>
        <td><%= profile.industry %></td>
        <td><%= profile.avatar %></td>
        <td><%= profile.twitter %></td>
        <td><%= profile.instagram %></td>
        <td><%= profile.facebook %></td>
        <td><%= profile.imdb %></td>
        <td><%= profile.portfolio %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
