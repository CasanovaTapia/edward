<h2><%= @post.title %></h2>

<div class="images">
	<% @post.images.each do |image| %>
		<%= image.title %>
		<% if image.avatar? %>
			<%= image_tag( image.avatar.url ) %>
		<% end %>
	<% end %>
</div>

<p><%= @post.body %></p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
