<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-8 col-md-offset-2">
    <div class="form-group">
      <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Title' %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category_id, options_from_collection_for_select(Category.all, "id", "name") %>
      <!-- <%= f.select :status_id, options_from_collection_for_select(Status.all, "id", "name") %> -->
    </div>

    <p class="small">For additional formatting, use the Markdown Syntax</p>
    <div class="form-group">
      <%= f.text_area :body, autofocus: true, class: 'form-control', rows: '10', placeholder: 'Keep it short and sweet' %>
    </div>

    <div class="form-group">
      <%= f.submit "Publish", class: 'btn' %>
    </div>
<% end %>
